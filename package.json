{
  "name": "hunslor",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postbuild": "prisma db push --skip-generate || echo 'DB push skipped'",
    "start": "prisma db push && (npm run db:seed || echo '⚠️ Seeding failed, starting app anyway...') && next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "railway:deploy": "prisma db push"
  },
  "dependencies": {
