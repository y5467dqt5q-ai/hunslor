    "jsonwebtoken": "^9.0.3",
    "next": "^14.2.0",
    "node-telegram-bot-api": "^0.67.0",
    "prisma": "^6.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsx": "^4.7.1",
    "use-debounce": "^10.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
